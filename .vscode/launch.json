  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug index.ts",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts",
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "TS_NODE_FILES": "true",
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
    },
  ]
}